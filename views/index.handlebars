<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Burger Name"
                    aria-label="Burger Name" aria-describedby="button-addon2">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="button" id="button-addon2">Add Burger</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <ul>
                {{#each burger_data}}
                {{#unless this.devoured}}
                <li class="list-group-item" id={{this.id}}> {{this.burger_name}}</li>
                <button data-id={{this.id}} class="devoured-button" type="button">Devour</button>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <ul>
                {{#each burger_data}}
                {{#if this.devoured}}
                <li class="list-group-item" id={{this.id}}> {{this.burger_name}}</li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>